#10. PHP Test


<?php
$db_host = "localhost";
$db_user = "user-name";
$db_passwd = "*****";
$db_name = "database-name";

$mysqli = new mysqli($db_host, $db_user, $db_passwd, $db_name);
if ($mysqli->connect_errno) {
     die("Connect Error : ".$mysqli->connect_error);
} else {
     echo "Success";
}

phpinfo();
?>
